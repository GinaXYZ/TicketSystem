@model IEnumerable<TicketSystem.Models.Ticket>
@{
    ViewData["Title"] = "Home";
    Layout = "_Layout";
	var currentPage = ViewBag.CurrentPage as int? ?? 1;
	var totalPages = ViewBag.TotalPages as int? ?? 1;
}

<div class="button-row">
    <button class="submit" onclick="window.location.href='/Home/Index'">Alle Tickets anzeigen</button>
    <button class="submit" onclick="CreateTicket()">Neues Ticket erstellen</button>
    <button class="submit" onclick="GetByIdAsync()">Nach ID suchen</button>
    <button class="login" onclick="window.location.href='/Home/Login'">Login</button>
    <button class="account" onclick="window.location.href='/Home/Account'" aria-label="Account">
        <svg viewBox="0 0 24 24" fill="currentColor" aria-hidden="true" focusable="false">
            <path d="M12 13.5c-4.97 0-9 2.24-9 5v2h18v-2c0-2.76-4.03-5-9-5zM12 12a5 5 0 100-10 5 5 0 000 10z" />
        </svg>
    </button>
</div>


<div class="newTicket" style="display: none;">
    <h2>Neues Ticket erstellen</h2>
    <form id="ticketForm" method="post" action="/Home/CreateTicket">
        
        <div class="form-field">
            <label for="Titel">Titel:</label>
            <input type="text" id="Titel" name="Titel" required />
        </div>
        <div class="form-field">
            <label for="Beschreibung">Beschreibung:</label>
            <textarea id="Beschreibung" name="Beschreibung" rows="4" required></textarea>
        </div>
        <div class="form-field">
            <label for="Email">E-Mail:</label>
            <input type="email" id="Email" name="Email" />
        </div>
        <div class="form-field">
            <label for="Status_Id">Status:</label>
            <select id="Status_Id" name="Status_Id" required>
                <option value="1" selected>Offen</option>
                <option value="2">In Bearbeitung</option>
                <option value="3">Geschlossen</option>
            </select>
        </div>
        <div class="form-field">
            <label for="Kategorie_Id">Kategorie:</label>
            <select id="Kategorie_Id" name="Kategorie_Id" required>
                <option value="1" selected>Technisches Problem</option>
                <option value="2">Feature Request</option>
                <option value="3">Bug Report</option>
                <option value="4">Frage</option>
                <option value="5">Sonstiges</option>
            </select>
        </div>
        <div class="form-field">
            <label for="Priorität_Id">Priorität:</label>
            <select id="Priorität_Id" name="Priorität_Id" required>
                <option value="1">Niedrig</option>
                <option value="2" selected>Normal</option>
                <option value="3">Hoch</option>
                <option value="4">Kritisch</option>
            </select>
        </div>
        <input type="hidden" name="Ersteller_Id" value="1" />
        
        <div class="form-actions">
            <button type="submit" class="btn-submit">Ticket erstellen</button>
            <button type="button" class="btn-cancel" onclick="HideTicketForm()">Abbrechen</button>
        </div>
    </form>
</div>
<div class="ticket-container">
    <div class="openTickets">
		<h3>Offene Tickets</h3>
		<span class="ticket-count">@ViewBag.OpenTicketsCount</span>
    </div>
    <div class="inProgress">
		<h3>In Bearbeitung</h3>
		<span class="ticket-count">@ViewBag.InProgressCount</span>

    </div>
    <div class="closedTickets">
		<h3>Geschlossen</h3>
		<span class="ticket-count">@ViewBag.ClosedTicketsCount</span>
    </div>
</div>

<div class="sort-section" id="sortTickets">
    <label for="sort">Sortieren:</label>
    <select id="sort" name="sort">
        <option value="1">Asc</option>
        <option value="2">Desc</option>
        <option value="3">By ID asc</option>
        <option value="4">By ID desc</option>
    </select>
</div>

@if (User?.Identity?.IsAuthenticated == true)
{
    @if (Model != null && Model.Any())
    {
        <div class="alltickets">
            <table class="ticketTable">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Titel</th>
                        <th>Beschreibung</th>
                        <th>Status</th>
                        <th>Erstellungsdatum</th>
                        <th>Email</th>
                        <th>Aktionen</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ticket in Model)
                    {
                        <tr>
                            <td>@ticket.Id</td>
                            <td>@ticket.Titel</td>
                            <td>@ticket.Beschreibung</td>
                            <td>@ticket.Status_Id</td>
                            <td>@(ticket.Erstellungsdatum.ToString("dd.MM.yyyy HH:mm") ?? "N/A")</td>
                            <td>@ticket.Email</td>
                            <td>
                                <a href="@Url.Action("DeleteTicket", "Home", new { id = ticket.Id })"
                                   onclick="return confirm('Möchten Sie dieses Ticket wirklich löschen?');"
                                   class="delete-button"
                                   title="Löschen">
                                    🗑️
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (totalPages > 1)
        {
            <div class="pagination">
                @if (currentPage > 1)
                {
                    <a href="@Url.Action("Index", new { page = currentPage - 1 })" class="pagination-btn">← Zurück</a>
                }

                <span class="pagination-info">Seite @currentPage von @totalPages</span>

                @if (currentPage < totalPages)
                {
                    <a href="@Url.Action("Index", new { page = currentPage + 1 })" class="pagination-btn">Weiter →</a>
                }
            </div>
        }
    }
    else
    {
        <p class="text-center">Keine Tickets verfügbar.</p>
    }
}
else
{
    <p class="text-center">Bitte melden Sie sich an, um Tickets zu sehen.</p>
}

<script>
    function CreateTicket() {
        document.querySelector('.newTicket').style.display = 'flex';
    }
    
    function HideTicketForm() {
        const form = document.getElementById('ticketForm');
        form.reset();
        document.querySelector('.newTicket').style.display = 'none';
    }

    function GetByIdAsync() {
        const ticketId = prompt("Bitte geben Sie die Ticket-ID ein:");
        if (ticketId) {
            window.location.href = `/Home/GetById/${ticketId}`;
        }
    }
    function sortTickets() {
        const sortOption = document.getElementById('sort').value;
		window.location.href = `/Home/Index?sort=${sortOption}`;
    }
</script>
