@model IEnumerable<TicketSystem.Models.Ticket>
@{
    ViewData["Title"] = "Home";
	Layout = "_Layout";
}



<div class="button-row">
<button class="submit" onclick="CreateTicket()">Neues Ticket erstellen</button>
<button class="submit" onclick="GetByIdAsync">Nach ID suchen</button>
    <button class="login" onclick="window.location.href='/Home/Login'">Login</button>
</div>

<div class="newTicket">
        <div>
            <label for="title">Titel:</label>
            <input type="text" id="title" name="title" required />
        </div>
        <div>
            <label for="description">Beschreibung:</label>
            <textarea id="description" name="description" required></textarea>
        </div>
        <div>
            <label for="status">Status:</label>
            <select id="status" name="status" required>
                <option value="Open">Offen</option>
                <option value="InProgress">In Bearbeitung</option>
                <option value="Closed">Geschlossen</option>
            </select>
        </div>
        <div>
            <button type="submit" class="submit">Ticket erstellen</button>
        </div>
        <div class="cancel">
			<button type="button" onclick="HideTicketForm()">Abbrechen</button>
		</div>
	</div>
@if (Model != null && Model.Any())
{
	<div class="AllTickets">
	<form method="post" asp-controller="Home" asp-action="Index">
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Titel</th>
                <th>Beschreibung</th>
				<th>Status</th>
				<th>Erstellt am</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ticket in Model)
            {
                <tr>
                    <td>@ticket.Id</td>
                    <td>@ticket.Titel</td>
                    <td>@ticket.Beschreibung</td>
                    <td>@ticket.Status_Id</td>
                    <td>@(ticket.Erstellungsdatum?.ToString("dd.MM.yyyy HH:mm") ?? "N/A")</td>
                </tr>
            }
        </tbody>
    </table>
    </form>
    </div>
}
else
{
    <p>Keine Tickets gefunden.</p>
}


<script>
    function CreateTicket() {
        document.querySelector('.newTicket').style.display = 'block';
    }
    function HideTicketForm() {
        document.querySelector('.newTicket').style.display = 'none';
	}

    function GetByIdAsync() {
        const ticketId = prompt("Bitte geben Sie die Ticket-ID ein:");
        if (ticketId) {
            window.location.href = `/Home/GetById/${ticketId}`;
        }
	}
</script>
